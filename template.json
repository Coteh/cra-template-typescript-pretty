{
  "package": {
    "dependencies": {
      "@testing-library/jest-dom": "^5.11.3",
      "@testing-library/react": "^10.4.8",
      "@testing-library/user-event": "^12.0.11",
      "@types/node": "^12.0.0",
      "@types/react": "^16.9.0",
      "@types/react-dom": "^16.9.0",
      "@types/jest": "^26.0.0",
      "typescript": "^4.0.2",
      "web-vitals": "^0.2.2",
      "husky": "^4.2.5",
      "lint-staged": "^10.2.11",
      "prettier": "^2.0.5",
      "pretty-quick": "^2.0.1"
    },
    "scripts": {
      "lint": "eslint --ext js,ts,tsx src",
      "format": "prettier --config ./.prettierrc --write ."
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "src/**/*.{js,ts,tsx}": [
        "eslint",
        "pretty-quick --staged"
      ]
    }
  }
}
